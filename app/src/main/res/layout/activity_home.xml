<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/androidsplash"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/StopButton"
        android:onClick="stopMyService"
        android:background="@drawable/stopbutton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|center_vertical" />

    <Button
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:background="@drawable/startbutton"
        android:id="@+id/StartButton"
        android:onClick="startMyService"
        android:layout_alignTop="@+id/StopButton"
        android:layout_gravity="left|center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The service will start in 10 seconds after you press start button"
        android:id="@+id/infotext"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_gravity="center|top" />

</FrameLayout>
